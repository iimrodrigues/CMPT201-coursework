#define _GNU_SOURCE
#include <stdbool.h>
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(int argc, char *argv[]) {
  printf("Please enter some text: ");

  char *input = NULL;
  size_t length = 0;
  getline(&input, &length, stdin);
  printf("%lu", length);

  char *tokens = NULL;
  char *saveptr = NULL;

  tokens = strtok_r(input, " ", &saveptr);
  while (tokens != NULL) {
    printf("%s\n", tokens);
    tokens = strtok_r(NULL, " ", &saveptr);
  }

  free(input);
}
