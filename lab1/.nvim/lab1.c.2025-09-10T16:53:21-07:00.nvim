#define _GNU_SOURCE
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(int argc, char *argv[]) {
  printf("Please enter some text: ");

  char *input = NULL;
  size_t length = 0;
  getline(&input, &length, stdin);
  
  char *tokens = NULL;
  char *saveptr = NULL;
  tokens = strtok_r(input, " ", &saveptr);
  printf("%s", tokens);

  free(input);
  free(tokens);
}
