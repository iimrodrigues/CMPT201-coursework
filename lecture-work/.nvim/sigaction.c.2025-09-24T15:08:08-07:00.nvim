#include <stdio.h>
#include <signal.h>
#include <unistd.h>
#include <stdlib.h>
#include <string.h>

static char *msg = "CTRL-C pressed\n";
void handler(){
  write(STDOUT_FILENO, msg, strlen(msg));
}

int main(){

  struct sigaction act;
  act.sa_handler = handle_siginit;
  act.sa_flags = 0;
  sigemptyset(&act.sa_mask);

  if (sigaction(SIGINT, &act, NULL) == -1){
    perror("Sigaction() failed");
    exit(EXIT_FAILURE);
  }

  while (1) {
    sleep(1);
  }
}
